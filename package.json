{
  "name": "risevest-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "start:dev": "ts-node-dev --respawn --transpile-only ./src/index",
    "start": "ts-node --transpile-only src/index.ts",
    "build": "tsc",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "db:dev:up": "docker-compose up -d --remove-orphans",
    "db:dev:rm": "docker-compose rm -s -f -v",
    "migration:create": "typeorm-ts-node-commonjs migration:create src/migrations/migration",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate src/migrations/migration -d src/datasource",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/datasource",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/datasource",
    "reset-db": "NODE_ENV=development typeorm-ts-node-commonjs schema:drop -d src/datasource && typeorm-ts-node-commonjs schema:sync -d src/datasource",
    "test": "jest --detectOpenHandles --forceExit "
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "argon2": "^0.41.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.13.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.5",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "prettier --write"
    ]
  }
}
